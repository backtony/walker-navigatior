<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="project.dao.AccidentDAO"><!--namespace를 통해 UserDAO와 연결합니다. -->

    <select id="getAccidents" resultType="project.dto.AccidentDTO"><!-- selectUsers()메서드를 호출하면 실행할 SELECT문이며,
						UserDTO 객체를 파라미터로 받아, UserDTO객체를 반환합니다.-->
        SELECT *
        FROM tbl_accident
    </select>

    <select id="getAccidentsInRange" resultType="project.routes.model.Accident"><!-- selectUsers()메서드를 호출하면 실행할
    SELECT문이며,
						UserDTO 객체를 파라미터로 받아, UserDTO객체를 반환합니다.-->
        SELECT *
        FROM tbl_accident
        WHERE <![CDATA[
                x >= #{x1}
            ]]>
        AND <![CDATA[
            x <= #{x2}
        ]]>
        AND <![CDATA[
                y >= #{y1}
        ]]>
        AND <![CDATA[
                y <= #{y2}
        ]]>
    </select>

    <select id="test" resultType="String">
        SELECT place_name
        FROM tbl_accident
        WHERE id = 1

    </select>
</mapper>